/* 返回按钮样式保持不变 */
.return {
  position: fixed;
  left: 20rpx;
  z-index: 999;
}

.picx {
  width: 100%;
  height: 100%;
}

.container {
  padding: 20rpx;
  background-color: #fef6f6;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 标题下移 */
.header {
  text-align: center;
  font-size: 40rpx;
  color: #ff4e79;
  font-weight: bold;
  margin-bottom: 40rpx;
  width: 100%;
  padding-top: calc(var(--placeHolderHeight) + 20rpx);
}

/* 纪念日列表调整 */
.anniversary-list {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  margin-top: 20rpx;
  width: 100%;
  align-items: center;
}

/* 纪念日方格加宽 */
.anniversary-item {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 78, 121, 0.1);
  width: 92%; /* 从原来的自动宽度改为92% */
}

.title {
  font-size: 36rpx;
  color: #ff4e79;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
  text-align: center;
}

.timer {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  margin: 20rpx 0;
}

.timer text {
  font-size: 32rpx;
  margin: 0 5rpx;
}

.timer text:nth-child(odd) {
  color: #ff4e79;
  font-weight: bold;
  font-size: 36rpx;
}

.date {
  font-size: 24rpx;
  color: #999;
  display: block;
  text-align: center;
  margin-top: 10rpx;
}